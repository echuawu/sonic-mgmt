pipeline {
    agent none
    options {
        timestamps()
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '30', numToKeepStr: '150')
    }
    environment {
        GENERIC_CI_GIT_BRANCH = '5.0.2-7'
        MAIN_NODE = 'MGMT_CI_MAIN'
        JSON_FILE = 'build/ci/ci_build_configuration.json'
    }
    stages {
        stage("Main") {
            agent { label "${MAIN_NODE}" }
            steps {
                script {
                    library changelog: false, identifier: "ci_framework@$GENERIC_CI_GIT_BRANCH"
                    LoadNGCI()
                }
            }
        }
    }
}
