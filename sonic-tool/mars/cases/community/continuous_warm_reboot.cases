<?xml version="1.0" encoding="UTF-8"?>
<CASEDEF>
    <global>
        <Test>
            <info> Continuous Warm Reboot Test </info>
            <!--Must be the test case name in sonic-mgmt/ansible/roles/test/vars/testcases.yml-->
            <name> continuous_reboot </name>
            <owner> </owner>
        </Test>
        <Case>
            <tags> CONTINUOUS_REBOOT, WARM_REBOOT </tags>
            <wrapper> [[run_time:db_tests_path]]/sonic-mgmt/sonic-tool/mars/scripts/community_mars_pytest_runner.py  </wrapper>
            <tout> 3600 </tout>
        </Case>
    </global>

    <case>
        <ignore>
            <ignore_by_tag> TAG_ISSU_DISABLED </ignore_by_tag>
            <condition>
                <key> skip_weekend_cases </key>
                <op> == </op>
                <value> yes </value>
            </condition>
        </ignore>

        <info> Continuous_Warm_Reboot Case </info>
        <name> continuous_warm_reboot </name>
        <tout> 7200 </tout>
        <cmd>
             <params>
                 <static_args> --sonic-mgmt-dir /root/mars/workspace/[[conf:extra_info.sonic_mgmt_repo_name]] --dut-name [[conf:extra_info.dut_name]] --sonic-topo [[conf:extra_info.topology]] --json-root-dir [[conf:extra_info.json_root_dir]] --raw-options "\'--topology [[conf:extra_info.topology]] --log-cli-level info --show-capture=no -ra --showlocals -v  --reboot_type=warm --continuous_reboot_count=5 --continuous_reboot_delay=600\'" --test-scripts platform_tests/test_cont_warm_reboot.py </static_args>
             </params>
        </cmd>

    </case>

</CASEDEF>
